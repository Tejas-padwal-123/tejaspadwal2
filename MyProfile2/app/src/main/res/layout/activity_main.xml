<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content">
        <ImageView
                android:layout_width="210dp"
                android:layout_height="210dp"
                android:src="@drawable/photo"
                android:rotation="90"
                android:layout_gravity="center_horizontal"
                android:padding="10dp"
                android:id="@+id/profilePic"

        />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tejas Padwal"
                android:textStyle="bold"
                android:textColor="#222222"
                android:layout_gravity="center_horizontal"
                android:textSize="30sp"
                android:layout_marginBottom="10dp"
                android:id="@+id/nameText"
                android:layout_toRightOf="@+id/profilePic"
        />



        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="tejaspadwal95@gmail.com"
                android:textStyle="italic"
                android:textColor="#222222"
                android:layout_gravity="center"
                android:textSize="15sp"
                android:layout_marginBottom="10dp"
                android:id="@+id/mailID"
                android:layout_toRightOf="@+id/profilePic"
                android:layout_below="@+id/nameText"
        />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+91 8368984819"
                android:textStyle="italic"
                android:textColor="#222222"
                android:layout_gravity="center"
                android:textSize="15sp"
                android:layout_marginBottom="10dp"
                android:id="@+id/phoneNo"
                android:layout_toRightOf="@+id/profilePic"
                android:layout_below="@+id/mailID"
        />



    </RelativeLayout>


    <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="achivments "
            android:textStyle="bold"
            android:background="@color/colorPrimaryDark"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="10dp"
            android:layout_margin="10sp"
            android:id="@+id/button1"

    />
    <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="position of responsibility"
            android:textStyle="bold"
            android:background="@color/colorPrimaryDark"
            android:textColor="#FFFFFF"
            android:layout_margin="10sp"
            android:layout_marginBottom="10dp"
            android:id="@+id/button2"
    />
    <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="certification"
            android:textStyle="bold"
            android:background="@color/colorPrimaryDark"
            android:textColor="#FFFFFF"
            android:layout_margin="10sp"
            android:layout_marginBottom="10dp"
            android:id="@+id/button3"
    />

    <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="projects and  internships"
            android:textStyle="bold"
            android:background="@color/colorPrimaryDark"
            android:textColor="#FFFFFF"
            android:layout_margin="10sp"
            android:layout_marginBottom="10dp"
            android:id="@+id/button4"




    />



</LinearLayout>